generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model cita {
  id         Int      @id @default(autoincrement())
  fecha      DateTime
  estado     String
  servicioId Int
  usuarioId  Int
  servicio   servicio @relation(fields: [servicioId], references: [id], map: "Cita_servicioId_fkey")
  usuario    usuario  @relation(fields: [usuarioId], references: [id], map: "Cita_usuarioId_fkey")

  @@index([servicioId], map: "Cita_servicioId_fkey")
  @@index([usuarioId], map: "Cita_usuarioId_fkey")
}

model servicio {
  id          Int    @id @default(autoincrement())
  nombre      String
  descripcion String
  cita        cita[]
}

model usuario {
  id             Int      @id @default(autoincrement())
  nombre         String
  apellido       String
  correo         String   @unique(map: "Usuario_correo_key")
  fecha_registro DateTime @default(now())
  cita           cita[]
}
