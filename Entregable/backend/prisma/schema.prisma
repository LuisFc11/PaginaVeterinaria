generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Cita {
  id             Int      @id @default(autoincrement())
  nombreDuenio   String
  telefono       String
  correo         String
  nombreMascota  String
  especie        String
  raza           String
  motivo         String
  fecha          DateTime
  hora           String
  creadaEn       DateTime @default(now())
}


model servicio {
  id          Int    @id @default(autoincrement())
  nombre      String
  descripcion String
  cita        cita[]
}

model usuario {
  id             Int      @id @default(autoincrement())
  nombre         String
  apellido       String
  correo         String   @unique(map: "Usuario_correo_key")
  fecha_registro DateTime @default(now())
  cita           cita[]
}
